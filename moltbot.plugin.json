{
  "id": "remoteclaw",
  "name": "RemoteClaw Gateway",
  "version": "0.1.0",
  "description": "Exposes provider, rate-limit, and voice endpoints for RemoteClaw clients",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "proxyPort": {
        "type": "number",
        "default": 18793
      },
      "providers": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "billing": {
              "type": "string",
              "enum": ["api", "subscription"]
            },
            "plan": {
              "type": "string"
            },
            "monthlyPrice": {
              "type": "number"
            }
          }
        }
      },
      "voice": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "stt": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "provider": { "type": "string" },
              "model": { "type": "string" }
            }
          },
          "tts": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "provider": { "type": "string" },
              "model": { "type": "string" },
              "defaultVoice": { "type": "string" }
            }
          }
        }
      },
      "pairPassword": {
        "type": "string"
      },
      "externalUrl": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "dataDir": {
        "type": "string",
        "description": "Directory for persistent Talk data (default: ~/.moltbot/plugins/remoteclaw)"
      },
      "realtimeVoice": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "defaultProvider": {
            "type": "string",
            "enum": ["openai", "cartesia", "elevenlabs", "deepgram", "gemini"]
          },
          "openai": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "model": { "type": "string" },
              "voice": { "type": "string" }
            }
          },
          "cartesia": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "model": { "type": "string" },
              "voice": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "uiHints": {
    "providers": {
      "label": "Provider Billing Config",
      "help": "Per-provider billing mode. Keys are provider IDs (e.g. anthropic, deepseek)."
    },
    "voice": {
      "label": "Voice Config",
      "help": "STT/TTS configuration. Defaults to OpenAI Whisper + TTS if OPENAI_API_KEY is set."
    },
    "pairPassword": {
      "label": "Pairing Password",
      "help": "Password for mobile pairing. If unset, the /api/pair endpoint is disabled."
    },
    "externalUrl": {
      "label": "External URL",
      "help": "Preferred client URL (e.g. Tailscale Funnel URL). Returned during pairing."
    },
    "name": {
      "label": "Gateway Name",
      "help": "Friendly name for this gateway, returned during pairing."
    },
    "realtimeVoice": {
      "label": "Realtime Voice Config",
      "help": "Default provider and per-provider model/voice settings for real-time voice streaming."
    }
  }
}
