{
  "id": "remoteclaw",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "providers": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "billing": {
              "type": "string",
              "enum": ["api", "subscription"]
            },
            "plan": {
              "type": "string"
            },
            "monthlyPrice": {
              "type": "number"
            }
          }
        }
      },
      "voice": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "stt": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "provider": { "type": "string" },
              "model": { "type": "string" }
            }
          },
          "tts": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "provider": { "type": "string" },
              "model": { "type": "string" },
              "defaultVoice": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "uiHints": {
    "providers": {
      "label": "Provider Billing Config",
      "help": "Per-provider billing mode. Keys are provider IDs (e.g. anthropic, deepseek)."
    },
    "voice": {
      "label": "Voice Config",
      "help": "STT/TTS configuration. Defaults to OpenAI Whisper + TTS if OPENAI_API_KEY is set."
    }
  }
}
